<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView android:text="Hello World!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sub world"
        android:id="@+id/myButton2EnterSubWorld"
        android:onClick="enterSubWorld"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count Up"
        android:id="@+id/myButton2CountUp"
        android:layout_above="@+id/myButton2EnterSubWorld"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:onClick="countUp"
        android:nestedScrollingEnabled="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/myTextView4Counter"
        android:layout_above="@+id/myButton2CountUp"
        android:layout_centerHorizontal="true"
        android:textSize="90sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CountDown"
        android:id="@+id/myButton2CountDown"
        android:layout_alignTop="@+id/myButton2CountUp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="countDown" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ResetCounter"
        android:id="@+id/myButton2ResetCounter"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp"
        android:onClick="resetCounter" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BG world"
        android:id="@+id/myButton2EnterBGWorld"
        android:layout_alignTop="@+id/myButton2EnterSubWorld"
        android:layout_alignLeft="@+id/myButton2CountDown"
        android:layout_alignStart="@+id/myButton2CountDown"
        android:onClick="enterBGWorld" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartService"
        android:id="@+id/myButton2StartService"
        android:layout_alignBaseline="@+id/myButton2StopService"
        android:layout_alignBottom="@+id/myButton2StopService"
        android:layout_toLeftOf="@+id/myTextView4Counter"
        android:layout_toStartOf="@+id/myTextView4Counter" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StopService"
        android:id="@+id/myButton2StopService"
        android:layout_above="@+id/myButton2ResetCounter"
        android:layout_toRightOf="@+id/myTextView4Counter"
        android:layout_toEndOf="@+id/myTextView4Counter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/MyTextView4SensorValue"
        android:textSize="45sp"
        android:layout_gravity="center"
        android:layout_below="@+id/myButton2EnterBGWorld"
        android:layout_alignRight="@+id/myButton2CountDown"
        android:layout_alignEnd="@+id/myButton2CountDown"
        android:maxLength="10" />
</RelativeLayout>
