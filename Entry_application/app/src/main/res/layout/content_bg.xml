<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#000000"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_bg" tools:context=".BackGroundActivity">

    <TextView android:text="Hello BackGround World!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:id="@+id/MyTextView4HelloBGW" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main World"
        android:id="@+id/myButton2EnterMainWorld"
        android:onClick="enterMainWorld"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp" />

    <TextView
        android:textColor="#00ff00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/MyTextView4SensorValueAzimuth"
        android:textSize="15sp"
        android:layout_below="@+id/MyTextView4HelloBGW"
        android:layout_alignLeft="@+id/MyTextView4SensorValuePitch"
        android:layout_alignStart="@+id/MyTextView4SensorValuePitch"
        android:layout_marginTop="23dp" />

    <TextView
        android:textColor="#00ff00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/MyTextView4SensorValuePitch"
        android:textSize="15sp"
        android:layout_below="@+id/MyTextView4SensorValueAzimuth"
        android:layout_alignLeft="@+id/MyTextView4SensorValueRoll"
        android:layout_alignStart="@+id/MyTextView4SensorValueRoll" />

    <TextView
        android:textColor="#00ff00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/MyTextView4SensorValueRoll"
        android:textSize="15sp"
        android:layout_below="@+id/MyTextView4SensorValuePitch"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
